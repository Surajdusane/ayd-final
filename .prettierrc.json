{
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "printWidth": 120,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "endOfLine": "auto",
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@radix-ui/(.*)$",
    "^vaul$",
    "^motion/(.*)$",
    "^lucide-react$",
    "^class-variance-authority$",
    "^clsx$",
    "^tailwind-merge$",
    "",
    "^fumadocs-(.*)$",
    "^rehype-(.*)$",
    "^remark-(.*)$",
    "^@shikijs/(.*)$",
    "^unist-(.*)$",
    "",
    "^@/actions/(.*)$",
    "^@/app/(.*)$",
    "^@/components/ui/(.*)$",
    "^@/components/(.*)$",
    "^@/db/(.*)$",
    "^@/features/(.*)$",
    "^@/hooks/(.*)$",
    "^@/lib/(.*)$",
    "^@/providers/(.*)$",
    "^@/styles/(.*)$",
    "^@/trpc/(.*)$",
    "^@/utils/(.*)$",
    "^@/utils/supabase/(.*)$",
    "",
    "^@/types/(.*)$",
    "",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "overrides": [
    {
      "files": "*.mdx",
      "options": {
        "printWidth": 80,
        "proseWrap": "always",
        "plugins": ["prettier-plugin-tailwindcss"]
      }
    }
  ]
}
